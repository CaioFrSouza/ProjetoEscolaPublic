<!DOCTYPE html>
html(lang="pt")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cadastro
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css")
        link(rel="stylesheet", href="css/cadastro.css")
    body
        <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row"> <img src="image/login_logo.svg" class="logo"> </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="image/login_image.svg" class="image"> </div>
                </div>
            </div>
            <div class="col-lg-6">
             <div class="card2 card border-0 px-4 py-5">
                <div class="row mb-4 px-3"></div>
                form(method="post")
                    <div class="row px-3"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Nome</h6>
                            </label> <input class="mb-4" type="text" name="name" placeholder="Insira o seu nome" required> </div>

                            <div class="row px-3"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Email de acesso</h6>
                            </label> <input class="mb-4" type="email" name="email" placeholder="Insira um email" required> </div>

                            <div class="row px-3"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Senha</h6>
                            </label> <input type="password" name="password" placeholder="Entre com a senha" required> </div>
                            <div class="row px-3"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Confirme a senha</h6>
                            </label> <input type="password" name="password2" placeholder="Entre com a senha" required> </div>
                            <div class="row px-3 mb-4">

                            <div class="row px-3"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Numero</h6>
                            </label> <input class="mb-4" type="number" name="number" placeholder="Insira o seu número da chamada" required> </div>


                            p(class = 'text-err' id = "err") As senhas não são iguais
                            p(class = 'text-err2') #{err}
                            </div>
                            <div class="row mb-3 px-3"> <button type="submit" class="btn btn-blue text-center">Cadastra-se</button> </div>
                            <div class="row mb-4 px-3"> <small class="font-weight-bold"> Já tem conta? <a href = "../auth/login" class="text-danger ">Clique aqui e faça o seu login ;)</a></small> </div>
                </div>
                </div>
            </div>
            <div class="bg-blue py-4">
                <div class="row px-3"> <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2020. Todos os direitos reservados.</small> 
                    <div class="social-contact ml-4 ml-sm-auto"> <span class="fa fa-facebook mr-4 text-sm"></span> <span class="fa fa-google-plus mr-4 text-sm"></span> <span class="fa fa-linkedin mr-4 text-sm"></span> <span class="fa fa-twitter mr-4 mr-sm-5 text-sm"></span> </div>
                        </div>
                    </div>
                </div>
            </div>
        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js")
        script(src="js/cadastro.js")